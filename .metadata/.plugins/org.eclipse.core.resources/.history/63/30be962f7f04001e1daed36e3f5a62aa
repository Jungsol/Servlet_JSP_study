<!-- 지시자요소 -->
<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
</head>
<body>
	<!-- 선언문(거의 사용하지 않음!)->자바메소드를 만들어서 처리할 일이 거의 없기 때문. 보통 servlet에서 작업함 -->
	<%!
		public void show(){
			System.out.println("Hello JSP!");
		}
	%> 

	<!-- 스크립틀릿 -->
	<% 	
		String str = "Hello"; 
		show();
	%>
	
	<!-- 표현식 -->
	<%= str  %>
	
</body>
</html>